<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pidev.esprit.Controllers.Credit.GarantieController">

    <!-- Titre -->
    <Label alignment="TOP_CENTER" prefWidth="600.0" styleClass="background" stylesheets="@Stylesheet/Style.css" text="Add guarantee " textAlignment="CENTER" textFill="#e1a729">
        <font>
            <Font name="System Bold Italic" size="21.0" />
        </font>
    </Label>

    <!-- Champ de sÃ©lection de la nature de la garantie -->
    <Label layoutX="35.0" layoutY="77.0" prefHeight="18.0" prefWidth="46.0" text="Nature" />
    <ComboBox fx:id="tf_nature" layoutX="35.0" layoutY="109.0" prefWidth="150.0" promptText="Select" />

    <!-- Champ de saisie de la valeur de la garantie -->
    <Label layoutX="233.0" layoutY="77.0" prefHeight="18.0" prefWidth="46.0" text="Value" />
    <TextField fx:id="tf_valeur" layoutX="233.0" layoutY="109.0" promptText="Warranty value" />

    <!-- Bouton pour choisir un fichier -->
    <Button fx:id="btnChoose" layoutX="426.0" layoutY="107.0" onAction="#ChooseFile" text="Choose a file" />

    <!-- Bouton pour ajouter la garantie -->
    <Button fx:id="btnAjout" layoutX="222.0" layoutY="153.0" onAction="#InsertGarantie" stylesheets="@Stylesheet/Style.css" text="ADD" />

    <!-- Label pour afficher le statut -->
    <Label layoutX="426.0" layoutY="77.0" text="Data" />
   <TableView fx:id="table_garantie" editable="true" layoutX="17.0" layoutY="194.0" prefHeight="200.0" prefWidth="580.0">
     <columns>
       <TableColumn fx:id="id_garantie" prefWidth="51.20001220703125" text="Id" />
       <TableColumn fx:id="id_credit" prefWidth="67.20001220703125" text="IdCredit" />
         <TableColumn fx:id="nature_garantie" prefWidth="136.0" text="Nature" />
         <TableColumn fx:id="Valeur_Garantie" prefWidth="94.4000244140625" text="Value" />
         <TableColumn fx:id="preuve" prefWidth="229.5999755859375" text="Data" />
     </columns>
   </TableView>
   <Button fx:id="btndelete" layoutX="312.0" layoutY="152.0" mnemonicParsing="false" onAction="#deleteGarantie" stylesheets="@Stylesheet/Style.css" text="DELETE" />
   <Label layoutX="389.0" layoutY="113.0" text="DT" />

</AnchorPane>

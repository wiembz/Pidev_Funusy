<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pidev.esprit.Controllers.Credit.GarantieController">

    <!-- Titre -->
    <Label alignment="TOP_CENTER" prefWidth="600.0" styleClass="background" stylesheets="@Stylesheet/Style.css" text="Add guarantee " textAlignment="CENTER" textFill="#e1a729">
        <font>
            <Font name="System Bold Italic" size="21.0" />
        </font>
    </Label>

    <!-- Champ de sÃ©lection de la nature de la garantie -->
    <Label layoutX="35.0" layoutY="119.0" prefHeight="18.0" prefWidth="46.0" text="Nature" />
    <ComboBox fx:id="tf_nature" layoutX="35.0" layoutY="151.0" prefWidth="150.0" promptText="Select" />

    <!-- Champ de saisie de la valeur de la garantie -->
    <Label layoutX="233.0" layoutY="119.0" prefHeight="18.0" prefWidth="46.0" text="Value" />
    <TextField fx:id="tf_valeur" layoutX="233.0" layoutY="151.0" promptText="Warranty value" />

    <!-- Bouton pour choisir un fichier -->
    <Button fx:id="btnChoose" layoutX="426.0" layoutY="149.0" onAction="#ChooseFile" text="Choose a file" />

    <!-- Bouton pour ajouter la garantie -->
    <Button fx:id="btnAjout" layoutX="264.0" layoutY="200.0" onAction="#InsertGarantie" text="ADD" />

    <!-- Label pour afficher le statut -->
    <Label layoutX="426.0" layoutY="119.0" text="Data" />

</AnchorPane>
